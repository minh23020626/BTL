<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="main_form" prefHeight="462.0" prefWidth="651.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.user.LoginClientForm">
    <children>
        <AnchorPane prefHeight="462.0" prefWidth="300.0" style="-fx-background-color: linear-gradient(to bottom, #6a11cb, #2575fc);">
            <children>
                <ImageView fx:id="clientView" fitHeight="215.0" fitWidth="268.0" layoutX="43.0" layoutY="124.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@image/client.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>

        <AnchorPane layoutX="300.0" prefHeight="462.0" prefWidth="351.0" style="-fx-background-color: #f9f9f9;">
            <children>

                <TextField fx:id="username" layoutX="66.0" layoutY="117.0" onAction="#loginClient" prefHeight="40.0" prefWidth="220.0" promptText="Username" style="-fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;" stylesheets="@style.css" />

                <PasswordField fx:id="password" layoutX="66.0" layoutY="172.0" onAction="#loginClient" prefHeight="40.0" prefWidth="220.0" promptText="Password" style="-fx-background-radius: 5; -fx-border-color: #dcdcdc; -fx-border-radius: 5;" stylesheets="@style.css" />

                <Button layoutX="66.0" layoutY="235.0" mnemonicParsing="false" onAction="#loginClient" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: linear-gradient(to bottom, #6a11cb, #2575fc); -fx-background-radius: 5; -fx-text-fill: white;" stylesheets="@style.css" text="Login" />

                <Button fx:id="btnSignup" layoutX="66.0" layoutY="285.0" mnemonicParsing="false" onAction="#openSignupForm" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #e8e8e8; -fx-border-color: #dcdcdc; -fx-border-radius: 5; -fx-text-fill: #6a11cb;" stylesheets="@style.css" text="Sign up" />

                <Button fx:id="btnLogin" layoutX="101.0" layoutY="331.0" mnemonicParsing="false" onAction="#openLoginAdmin" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: transparent; -fx-text-fill: #6a11cb; -fx-underline: true;" stylesheets="@style.css" text="Login as admin" />
                <ImageView fx:id="welcome" fitHeight="84.0" fitWidth="99.0" layoutX="134.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@image/welcome.png" />
                    </image>
                </ImageView>
            <Button layoutX="88.0" layoutY="369.0" mnemonicParsing="false" onAction="#openForgotPassForm" opacity="0.79" prefHeight="39.0" prefWidth="175.0" style="-fx-background-color: transparent; -fx-text-fill: #6a11cb; -fx-underline: true;" stylesheets="@style.css" text="Forgot PassWord">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
